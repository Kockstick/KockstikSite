@{
    ViewData["Title"] = "Добавить Населенный Пункт";
}


<section>
    <div class="card card-bordered shadow-sm p-5 m-5">
        <h1 class="mb-5">Добавить Населенный Пункт</h1>

        <form method="post">
            <div class="input-group mb-5">
                <span class="input-group-text" id="basic-addon1">Префикс</span>
                <input required type="text" class="form-control" placeholder="Префикс населенного пункта"
                    aria-label="Username" aria-describedby="basic-addon1" name="Prefix" />
            </div>
            <div class="input-group mb-5">
                <span class="input-group-text" id="basic-addon1">Название</span>
                <input required type="text" class="form-control" placeholder="Название населенного пункта"
                    aria-label="Username" aria-describedby="basic-addon1" name="Name" />
            </div>

            <button class="btn btn-primary" id="SaveBtn" type="submit" asp-controller="City"
                asp-action="Create">Сохранить</button>
            <button class="btn btn-warning" id="CanselBtn" type="submit" formnovalidate asp-controller="Home"
                asp-action="Index">Отменить</button>
        </form>
    </div>
</section>

<script src="~/js/add_address.js" asp-append-version="true"></script>