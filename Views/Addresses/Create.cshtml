@{
    ViewData["Title"] = "Добавить Адрес";
}
<h1>Добавить Адрес</h1>

<section>
    <div class="main_container">

        <form>
            <ul>
                <li>
                    <p>Населенный пункт:</p>
                    <select required id="drop-down" name="LocationId" class="form-select input_field">
                        @{
                            if(Model != null)
                            {
                                foreach(var item in Model)
                                {
                                    <option value="@item.Id">@(item.Prefix + "." + item.Name)</option>
                                }
                            }
                        }
                    </select>
                </li>
                <li>
                    <p>Префикс улицы:</p>
                    <input required class="input_field" name="StreetPrefix" />
                </li>
                <li>
                    <p>Название улицы:</p>
                    <input required class="input_field" name="StreetName" />
                </li>
                <li>
                    <p>Номер дома:</p>
                    <input required class="input_field" type="number" name="HouseNumber" />
                </li>
                <li>
                    <p>Литера дома:</p>
                    <input class="input_field" name="HomeLetter" />
                </li>
                <li>
                    <p>Номер корпуса:</p>
                    <input class="input_field" type="number" name="BuildingNumber" />
                </li>
                <li>
                    <p>Номер квартиры:</p>
                    <input class="input_field" type="number" name="ApartmentNumber" />
                </li>
                <li>
                    <p>Номер комнаты:</p>
                    <input class="input_field" type="number" name="RoomNumber" />
                </li>
                <li>
                    <p>Комментарий:</p>
                    <textarea class="input_field" name="Description"></textarea>
                </li>
            </ul>

            <button class="btn-primary" id="SaveBtn" type="submit" method="post" asp-controller="Addresses" asp-action="Create">Сохранить</button>
            <button class="btn-outline-warning" id="CanselBtn" type="submit" formnovalidate asp-controller="Home" asp-action="Index">Отменить</button>
        </form>
    </div>
</section>

<script src="~/js/add_address.js" asp-append-version="true"></script>